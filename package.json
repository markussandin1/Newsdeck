{
  "name": "newsdeck",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "rm -rf .test-dist && tsc --project tsconfig.test.json && NODE_ENV=test node --require ./tests/setup.js --test $(find .test-dist/tests -name '*.js') && rm -rf .test-dist",
    "db:setup": "./scripts/setup-local-db.sh",
    "db:start": "docker-compose up -d postgres",
    "db:stop": "docker-compose down",
    "db:reset": "docker-compose down -v && ./scripts/setup-local-db.sh",
    "db:logs": "docker-compose logs -f postgres",
    "db:connect": "docker exec -it newsdeck-postgres psql -U newsdeck -d newsdeck_dev",
    "proxy:start": "./scripts/start-prod-proxy.sh",
    "proxy:stop": "pkill -f 'cloud-sql-proxy.*newsdeck' || true",
    "proxy:restart": "npm run proxy:stop && npm run proxy:start",
    "proxy:status": "ps aux | grep -i cloud-sql-proxy | grep -v grep || echo '‚ùå Proxy not running'",
    "proxy:check": "node scripts/check-proxy.mjs",
    "proxy:logs": "tail -f /tmp/cloud-sql-proxy-newsdeck.log",
    "proxy:autostart": "./scripts/setup-proxy-autostart.sh",
    "dev:full": "npm run proxy:check && npm run dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
